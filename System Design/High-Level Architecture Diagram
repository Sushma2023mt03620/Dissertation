            POLICY[Azure Policy]
            MONITOR[Azure Monitor]
        end
        
        subgraph "Production Landing Zone"
            WEBAPP[Web Applications]
            IOTAPPS[IoT Applications]
            AIML[AI/ML Platform]
            DATABASE[Databases]
        end
        
        subgraph "Shared Services"
            AAD[Azure AD]
            KEYVAULT[Key Vault]
            ACR[Container Registry]
            STORAGE[Shared Storage]
        end
    end
    
    subgraph "External Services"
